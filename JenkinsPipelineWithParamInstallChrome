pipeline {
    agent any

    parameters {
        choice(
            name: 'TARGET_GROUP',
            choices: ['zorinnodes', 'troubleshooting', 'subnetscan'], // Replace with actual group names
            description: 'Select the target group from the inventory file'
        )
    }

    environment {
        INVENTORY_FILE = '/ansible/hosts.ini' // Replace with the actual inventory file path
        PLAYBOOK = '/ansible/install-google-chrome.yml'   // Replace with the actual playbook path
    }

    stages {
        stage('Display Selected Group') {
            steps {
                echo "Selected group: ${params.TARGET_GROUP}"
            }
        }

        stage('Run Ansible Playbook') {
            steps {
                script {
                    sh """
                        ansible-playbook -i ${INVENTORY_FILE} ${PLAYBOOK} \
                        --extra-vars "target_group=${params.TARGET_GROUP}"
                    """
                }
            }
        }
    }
}
