pipeline {
    agent any

    parameters {
        choice(
            name: 'TARGET_HOST_GROUP',
            choices: ['troubleshooting', 'subnetscan', 'zorrinnodes'],
            description: 'Select the target host group defined in the Ansible inventory'
        )
    }

    environment {
        INVENTORY_FILE = 'hosts.ini' // Path to the inventory file in the Git repository
        ANSIBLE_CONFIG = './ansible.cfg' // Optional: Ansible configuration file
        ANSIBLE_PLAYBOOK = 'install-google-chrome.yml'
    }

    stages {
        stage('Checkout Repository') {
            steps {
                echo 'Checking out Git repository...'
                git branch: 'main', url: 'https://github.com/jrbanua/ansible.git'
            }
        }

        stage('Run Ansible Playbook') {
            steps {
                echo "Running Ansible Playbook: ${params.ANSIBLE_PLAYBOOK} on group: ${params.TARGET_HOST_GROUP}"
                script {
                    // Execute the Ansible playbook with the selected host group
                    sh """
                    ansible-playbook -i ${INVENTORY_FILE} ${ANSIBLE_PLAYBOOK} --limit ${params.TARGET_HOST_GROUP}
                    """
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline execution finished!'
        }
        success {
            echo 'Ansible playbook executed successfully!'
        }
        failure {
            echo 'Ansible playbook execution failed.'
        }
    }
}
